<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_first"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.wonderful.myfirstcode.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_inquiry_activity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="探究活动" />

            <Button
                android:id="@+id/btn_custom_controls"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="UI开发" />

            <Button
                android:id="@+id/btn_inquiry_fragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="探究碎片" />

            <Button
                android:id="@+id/btn_broadcast"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="广播机制" />

            <Button
                android:id="@+id/btn_persistent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="持久化技术" />

            <Button
                android:id="@+id/btn_content_provider"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="内容提供器" />

            <Button
                android:id="@+id/btn_multimedia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="多媒体技术" />

            <Button
                android:id="@+id/btn_network_technique"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="网络技术" />

            <Button
                android:id="@+id/btn_inquiry_service"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="探究服务" />

            <Button
                android:id="@+id/btn_lbs_service"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="位置服务" />

            <Button
                android:id="@+id/btn_material_design"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Material Design" />

            <Button
                android:id="@+id/btn_advance_technique"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="高级技巧" />

            <Button
                android:id="@+id/btn_enter_combat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="酷欧天气" />

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
